.container {
  background: #f5f5f5;
  width: 100%;
}

.container .header {
  background-color: #fff;
  padding-bottom: 40rpx;
  padding-top: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.container .header image {
  width: 200rpx;
  height: 300rpx;
  box-shadow: 2px 2px 3px #e3e3e3;
}

.header.title {
  font-weight: 600;
  font-size: 38rpx;
  margin-top: 20rpx;
  color: #2f2f2f
}

.header .author {
  font-size: 28rpx;
  color: #999;
}

.sub-container {
  background: #fff;
  width: 690rpx;
  padding: 30rpx;
  margin-top: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.headline {
  color: #2f2f2f;
  font-size: 30rpx;
  font-weight: 600;
  margin-bottom: 20rpx;
}

.comments-container {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.comments-container v-tag {
  margin-right: 15rpx;
  margin-bottom: 10rpx;
}

.comments-container v-tag:nth-child(1) view {
  background: #fffbdd !important;
}

.comments-container v-tag:nth-child(2) view {
  background: #eefbff !important;
}

.num {
  font-size: 22rpx;
  margin-left: 10rpx;
  color: #aaaaaa;
}

.content {
  font-size: 30rpx;
  text-indent: 60rpx;
  font-weight: 500;
}
.fack-post {
  height: 100rpx;
}
.post-container {
  position: fixed;
  bottom: 0;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  width: 690rpx;
  box-shadow: 1px -1px 1px #e3e3e3;
  background: #ffff;
  padding: 0 30rpx;
}

.post-fake {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 60rpx;
  width: 460rpx;
  border: 1px solid #999;
  border-radius: 15px;
  font-size: 22rpx;
  padding-left: 20rpx;
}

.like-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.like {
  margin-right: 30rpx;
  margin-top: 10rpx;
}

.posting-container {
  bottom: 0;
  position: fixed;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  z-index: 999;
}

.post-header {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  border-top: 1px solid #f5f5f5;
  border-bottom: 1px solid #f5f5f5;
  justify-content: space-between;
}

.cancel {
  color: #666666;
}

.post-header text {
  padding: 25rpx;
}

.post-header>text:first-child {
  font-size: 28rpx;
  color: #bbb;
}

.posting-container .comments-container {
  width: 690rpx;
  padding: 40rpx 30rpx 0 30rpx;
}
.post {
  width: 690rpx;
  margin: 30rpx auto;
  height: 56rpx;
  background-color: #f5f5f5;
  border-radius: 15px;
  padding-left: 25rpx;
}